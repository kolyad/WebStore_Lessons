@model LoginViewModel

@{
    ViewData["Title"] = "Логин";
}

<div class="container">
    <h1>Логин</h1>
    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-5 col-sm-offset-1">
                    <div class="login-form">
                        <!--login form-->
                        <h2>Введите свои данные для входа:</h2>

                        <form asp-action="Login" asp-antiforgery="true" asp-route-returnUrl="@Model.ReturnUrl">
                            <hr />

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input asp-for="UserName" placeholder="Имя пользователя" />
                            <span asp-validation-for="UserName" class="text-danger"></span>

                            <input asp-for="Password" placeholder="Пароль" />
                            <span asp-validation-for="Password" class="text-danger"></span>

                            <span>
                                <input asp-for="RememberMe" class="checkbox">
                                Запомнить меня
                            </span>

                            <hr />
                            <button type="submit" class="btn btn-default">Войти</button>

                        </form>

                    </div><!--/login form-->
                </div>
            </div>
        </div>
    </section><!--/form-->
</div>
