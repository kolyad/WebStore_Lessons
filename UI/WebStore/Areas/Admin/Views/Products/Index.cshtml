@model IEnumerable<ProductEditViewModel>

@{
    ViewBag.Title = "Каталог товаров";
}

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(p => p.Id)</th>
            <th>@Html.DisplayNameFor(p => p.Name)</th>
            <th>@Html.DisplayNameFor(p => p.SectionName)</th>
            <th>@Html.DisplayNameFor(p => p.BrandName)</th>
            <th>@Html.DisplayNameFor(p => p.ImageUrl)</th>
            <th>@Html.DisplayNameFor(p => p.Price)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">
                        <i class="glyphicon glyphicon-edit"></i>ред.
                    </a>
                </td>
                <td>@Html.DisplayFor(x => product.Id)</td>
                <td>@Html.DisplayFor(x => product.Name)</td>
                <td>@Html.DisplayFor(x => product.SectionName)</td>
                <td>@Html.DisplayFor(x => product.BrandName)</td>
                <td>
                    <img src="~/images/shop/@product.ImageUrl" width="50" alt="@product.ImageUrl" />
                </td>
                <td>@Html.DisplayFor(x => product.Price)</td>
                <td>
                    @if (product.CanDelete)
                    {
                        <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" class="text-danger">
                            <i class="glyphicon glyphicon-remove"></i>удал.
                        </a>
                    }
                    else
                    {
                        <div class="text-danger">удаление невозможно</div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>