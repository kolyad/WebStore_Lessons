@model RegisterUserViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="container">
    <h1>Регистрация нового пользователя</h1>
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-5">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Введите данные для регистрации нового пользователя:</h2>                    
                    <form asp-action="Register" asp-antiforgery="true">
                        <hr />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="UserName" placeholder="Логин" />
                        <span asp-validation-for="UserName" class="text-danger"></span>

                        <input asp-for="Password" placeholder="Пароль" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <input asp-for="PasswordConfirm" placeholder="Подтверждение пароля" />
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                        
                        <hr />
                        <button type="submit" class="btn btn-default">Signup</button>

                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>

</div>
