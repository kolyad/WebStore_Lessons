@model IEnumerable<UserOrderViewModel>

@{
    Layout = "_UserProfileLayout";
    ViewBag.Title = "Заказы пользователя";
}

<h3>Заказы пользователя</h3>

<table class="table">
    <thead>
        <tr>
            <th>№</th>
            <th>Имя</th>
            <th>Телефон</th>
            <th>Адрес</th>
            <th>Сумма</th>
        </tr>        
    </thead>
    <tbody>
        @{ var idx = 0;}
        @foreach (var order in Model)
        {
            <tr>
                <td>@(++idx)</td>
                <td>@order.Name</td>
                <td>@order.Phone</td>
                <td>@order.Address</td>
                <td>@order.TotalPrice.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>